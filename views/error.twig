{% import "utils.html" as utils %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Simple Weather App</title>
    <link rel="stylesheet" href="/css/built.css">
    <script src="/js/built.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">
            <img alt="Brand" style="max-height: 2ex;" src="https://avatars0.githubusercontent.com/u/6583576?v=3&s=96">
          </a>
        </div>
        <form class="navbar-form navbar-left" role="search" method="GET" action="/weather" id="place-form">
          <div class="form-group dropdown">
            <input type="text" class="form-control" id="search-inpt" placeholder="Search">
            <input type="hidden" name="place-id" id="place-id">
          </div>
          <button type="button" class="btn btn-default" id="search-btn">Search</button>
        </form>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm12 col-xs-12"><!-- container of panel -->
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h2 class="panel-title">Oups</h2>
            </div>
            <div class="panel-body">
              <p>We are sorry to inform you that a problem occur.</p>
              <pre>{{ error }}</pre>
            </div> <!-- panel body -->
            </div><!--  panel -->
        </div><!-- row -->
      </div><!-- container -->
  </body>
</html>
